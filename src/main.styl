@import 'https://fonts.googleapis.com/css?family=Anton|Oswald'

body
  margin 0
  background linear-gradient(35deg,#081433,#000) no-repeat

main
  max-width 800px
  padding 20px
  margin 80px auto

*:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6)
  color white
  text-decoration none
  font-size 25px
  font-family Oswald, sans-serif

  p, a, td
    line-height 1.6em
    margin 0
    margin-top 1em
    margin bottom 0.6em
    letter-spacing 0.03em

h1, h2, h3, h4, h5, h6
  font-family Anton, sans-serif
  font-weight 400

table
  margin 0 -16px
  margin-top 10px
  border-collapse collapse
  width calc(100% + 32px)
  p, a
    padding 0
    margin 0

  td
    padding 6px 16px
    &:not(.colspan3):last-child
      text-align right

  tr:not(.colspan3):nth-child(odd)
    background  black

.title-picture
  width 100%
  cursor pointer

  &-wrapper
    display table
    margin 10% auto
    width 50%

    &::after
      margin-left -50px
      width 40px
      content '+'
      font-size 80px
      opacity .5
