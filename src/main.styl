@import 'https://fonts.googleapis.com/css?family=Anton|Oswald'

body
  margin 0
  background linear-gradient(35deg, #081433, #000) no-repeat

main
  overflow-x hidden
  margin 80px auto
  padding 20px
  max-width 800px

*:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6)
  color white
  text-decoration none
  font-size 25px
  font-family Oswald, sans-serif

  p, a, td
    margin 0
    margin bottom .6em
    margin-top 1em
    letter-spacing .03em
    line-height 1.6em

a
  transition all .1s ease-out

  &:hover:not(:active)
    &, *
      color #71789c // !important

    h1, img
      color white
      opacity .5
      transition all .1s ease-out

h1, h2, h3, h4, h5, h6
  font-weight 400
  font-family Anton, sans-serif

blockquote
  display table
  margin 0 auto

table
  margin 0 -16px
  margin-top 10px
  width calc(100% + 32px)
  border-collapse collapse

  p, a
    margin 0
    padding 0

  td
    padding 6px 16px

    &:not(.colspan3):last-child
      text-align right

  tr:not(.colspan3):nth-child(odd)
    background black

.socialMedia svg
  margin 20px
  transform scale(2)

.title-picture
  width 100%
  cursor pointer

  &-wrapper
    display table
    margin 10% auto
    width 50%

    &::after
      margin-left -50px
      width 40px
      content '+'
      font-size 80px
      opacity .5
